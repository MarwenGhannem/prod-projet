{% extends 'base.html.twig' %}


    {% block body %}
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
<div class="comment-top mt-5">
    <h4>Ajouter un Activité</h4>
    <div class="comment-bottom w3pvtsinfo_mail_grid_right">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.dateact, {'attr':{'type':'time','class':'form-control','placeholder':'Date d"activité...'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.title,{'attr':{'type':'text','class':'form-control','placeholder':'Titre...'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.description,{'attr':{'type':'textarea','class':'form-control','placeholder':'Description...'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.place,{'attr':{'type':'text','class':'form-control','placeholder':'Lieu...'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.type,{'attr':{'type':'choicetype','class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.imageFile,{'attr':{'type':'text','class':'form-control','placeholder':'photo...'}}) }}
        </div>
        <div class="nav-button">
            {{ form_row(form.Ajouter,{'attr':{'type':'text','class':'btn btn-common','placeholder':'Ajouter...'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>







        {% endif %}
    {% endblock %}





